#
# Base
#
FROM php:7.0-fpm-alpine

LABEL maintainer="Carlos Brighton cbrghton@brghton.dev"

COPY xdebug.ini /usr/local/etc/php/conf.d/xdebug.ini
COPY supervisord-app.conf /etc/supervisord.conf

COPY --from=composer /usr/bin/composer /usr/bin/composer

# TODO: Maybe need purified ðŸ˜¬
# I preferred to get the node and npm package instead of using the image since all the libraries were joined
RUN apk --update --no-cache add \
    git \
    wget \
    curl \
    grep \
    build-base \
    libmemcached-dev \
    libmcrypt-dev \
    libxml2-dev \
    imagemagick-dev \
    pcre-dev \
    libtool \
    make \
    autoconf \
    g++ \
    cyrus-sasl-dev \
    libgsasl-dev \
    libzip-dev \
    supervisor \
    zsh \
    nodejs-npm

RUN docker-php-ext-install \
    mysqli \
    mbstring \
    pdo \
    pdo_mysql \
    tokenizer \
    xml \
    bcmath \
    soap \
    zip \
    mcrypt

RUN pecl channel-update pecl.php.net && \
    pecl install memcached \
    xdebug-2.5.0  \
    imagick

RUN docker-php-ext-enable \
    memcached \
    imagick \
    mcrypt \
    xdebug

RUN composer global require squizlabs/php_codesniffer && \
    ln -s ~/.composer/vendor/bin/phpcs /usr/bin/phpcs && \
    rm -rf /var/cache/apk/* /tmp/* && \
    mkdir -p /var/www


#
# Version
#
ADD VERSION .


ENTRYPOINT ["/usr/bin/supervisord", "-n", "-c", "/etc/supervisord.conf"]
